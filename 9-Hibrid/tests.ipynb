   "source": [
    "# Rescale between from [-1, 1] to [0, 1]\n",
    "#  (x - min)\n",
    "#  ---------\n",
    "# (max - min)\n",
    "def scale(arr):\n",
    "    return (arr - -1)/(1 - (-1))"
   ]
  },
